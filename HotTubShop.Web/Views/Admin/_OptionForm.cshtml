@model AdminOptionEditViewModel

<form method="post" asp-action="@(string.IsNullOrWhiteSpace(Model.Id) ? "AddOption" : "EditOption")" enctype="multipart/form-data" class="product-card p-3 p-lg-4">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ProductId" />
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Bestehende Gruppe</label>
            <select asp-for="SelectedGroup" class="form-select">
                <option value="">-- Gruppe w√§hlen --</option>
                @foreach (var g in Model.ExistingGroups)
                {
                    <option value="@g">@g</option>
                }
            </select>
        </div>
        <div class="col-md-6">
            <label class="form-label">Neue Gruppe</label>
            <input asp-for="NewGroupName" class="form-control" placeholder="z. B. Ofen, Isolierung, LED" />
        </div>
        <div class="col-md-4">
            <label asp-for="GroupName" class="form-label"></label>
            <input asp-for="GroupName" class="form-control" readonly />
            <span asp-validation-for="GroupName" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="PriceDelta" class="form-label"></label>
            <input asp-for="PriceDelta" class="form-control" />
            <span asp-validation-for="PriceDelta" class="text-danger"></span>
        </div>
        <div class="col-md-12">
            <label asp-for="ImageUrl" class="form-label"></label>
            <input asp-for="ImageUrl" class="form-control" placeholder="/img/options/ofen-premium.jpg oder https://..." />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div class="col-md-12">
            <label asp-for="ImageFile" class="form-label"></label>
            <input asp-for="ImageFile" class="form-control" type="file" accept=".jpg,.jpeg,.png,.webp,.gif,.svg" />
            <div class="form-text">Beim Upload wird die Bild-URL automatisch gesetzt.</div>
        </div>
        <div class="col-md-6">
            <label asp-for="NameDe" class="form-label"></label>
            <input asp-for="NameDe" class="form-control" />
            <span asp-validation-for="NameDe" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="NameEn" class="form-label"></label>
            <input asp-for="NameEn" class="form-control" />
            <span asp-validation-for="NameEn" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="DescriptionDe" class="form-label"></label>
            <textarea asp-for="DescriptionDe" class="form-control" rows="4"></textarea>
            <div class="form-text">HTML-Tags sind erlaubt und werden im Shop als HTML dargestellt.</div>
        </div>
        <div class="col-md-6">
            <label asp-for="DescriptionEn" class="form-label"></label>
            <textarea asp-for="DescriptionEn" class="form-control" rows="4"></textarea>
            <div class="form-text">HTML tags are allowed and rendered as HTML in the shop.</div>
        </div>
        <div class="col-12">
            <div class="form-check mt-1">
                <input asp-for="IsRequiredGroup" class="form-check-input" />
                <label asp-for="IsRequiredGroup" class="form-check-label"></label>
            </div>
        </div>
    </div>

    <div class="d-flex gap-2 mt-4">
        <button type="submit" class="btn btn-primary">Speichern</button>
        <a class="btn btn-outline-secondary" asp-action="ProductOptions" asp-route-id="@Model.ProductId">Abbrechen</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
