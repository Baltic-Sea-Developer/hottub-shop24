@model AdminProductEditViewModel

<form method="post" asp-action="@(string.IsNullOrWhiteSpace(Model.Id) ? "CreateProduct" : "EditProduct")" enctype="multipart/form-data" class="product-card p-3 p-lg-4">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

    <div class="row g-3">
        <div class="col-md-4">
            <label asp-for="Sku" class="form-label"></label>
            <input asp-for="Sku" class="form-control" />
            <span asp-validation-for="Sku" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="BasePrice" class="form-label"></label>
            <input asp-for="BasePrice" class="form-control" />
            <span asp-validation-for="BasePrice" class="text-danger"></span>
        </div>
        <div class="col-md-12">
            <label asp-for="ImageUrl" class="form-label"></label>
            <input asp-for="ImageUrl" class="form-control" placeholder="/img/products/mein-bild.jpg oder https://..." />
        </div>
        <div class="col-md-12">
            <label asp-for="ImageFile" class="form-label"></label>
            <input asp-for="ImageFile" class="form-control" type="file" accept=".jpg,.jpeg,.png,.webp,.gif,.svg" />
            <div class="form-text">Beim Upload wird die Bild-URL automatisch gesetzt.</div>
        </div>
        <div class="col-md-12">
            <label asp-for="GalleryImageUrlsText" class="form-label"></label>
            <textarea asp-for="GalleryImageUrlsText" class="form-control" rows="3" placeholder="/img/products/detail1.jpg&#10;/img/products/detail2.jpg"></textarea>
        </div>
        <div class="col-md-12">
            <label asp-for="GalleryImageFiles" class="form-label"></label>
            <input asp-for="GalleryImageFiles" class="form-control" type="file" accept=".jpg,.jpeg,.png,.webp,.gif,.svg" multiple />
            <div class="form-text">Mehrfachauswahl möglich. Hochgeladene Bilder werden automatisch ergänzt.</div>
        </div>
        <div class="col-md-6">
            <label asp-for="NameDe" class="form-label"></label>
            <input asp-for="NameDe" class="form-control" />
            <span asp-validation-for="NameDe" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="NameEn" class="form-label"></label>
            <input asp-for="NameEn" class="form-control" />
            <span asp-validation-for="NameEn" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="DescriptionDe" class="form-label"></label>
            <textarea asp-for="DescriptionDe" class="form-control" rows="4"></textarea>
            <div class="form-text">HTML-Tags sind erlaubt und werden im Shop als HTML dargestellt.</div>
        </div>
        <div class="col-md-6">
            <label asp-for="DescriptionEn" class="form-label"></label>
            <textarea asp-for="DescriptionEn" class="form-control" rows="4"></textarea>
            <div class="form-text">HTML tags are allowed and rendered as HTML in the shop.</div>
        </div>
    </div>

    <div class="d-flex gap-2 mt-4">
        <button type="submit" class="btn btn-primary">Speichern</button>
        <a class="btn btn-outline-secondary" asp-action="Index">Abbrechen</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
