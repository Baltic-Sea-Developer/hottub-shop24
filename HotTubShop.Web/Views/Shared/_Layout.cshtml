<!DOCTYPE html>
<html lang="@LanguageExtensions.NormalizeLanguage(Context.Request.Query["lang"])">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HotTub Shop 24</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HotTubShop.Web.styles.css" asp-append-version="true" />
</head>
<body>
    @{
        var lang = LanguageExtensions.NormalizeLanguage(Context.Request.Query["lang"]);
        var isEn = lang == "en";
    }
    <header class="main-header">
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand fw-semibold" asp-area="" asp-controller="Home" asp-action="Index" asp-route-lang="@lang">HotTub Shop 24</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse justify-content-between" id="mainNav">
                    <ul class="navbar-nav gap-lg-2">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" asp-route-lang="@lang">@(isEn ? "Shop" : "Shop")</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
                        </li>
                    </ul>
                    <div class="d-flex gap-2 mt-3 mt-lg-0">
                        <a class="btn btn-sm @(lang == "de" ? "btn-primary" : "btn-outline-primary")" asp-route-lang="de">DE</a>
                        <a class="btn btn-sm @(lang == "en" ? "btn-primary" : "btn-outline-primary")" asp-route-lang="en">EN</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container pb-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container d-flex flex-column flex-lg-row justify-content-between gap-2">
            <span>&copy; 2026 HotTub Shop 24</span>
            <div class="d-flex flex-wrap gap-3">
                <a asp-controller="Home" asp-action="Imprint" asp-route-lang="@lang">@(isEn ? "Imprint" : "Impressum")</a>
                <a asp-controller="Home" asp-action="Privacy" asp-route-lang="@lang">@(isEn ? "Privacy" : "Datenschutz")</a>
                <a asp-controller="Home" asp-action="Terms" asp-route-lang="@lang">AGB</a>
                <a asp-controller="Home" asp-action="Withdrawal" asp-route-lang="@lang">@(isEn ? "Withdrawal" : "Widerruf")</a>
                <a asp-controller="Home" asp-action="ShippingPayment" asp-route-lang="@lang">@(isEn ? "Shipping & Payment" : "Versand & Zahlung")</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
