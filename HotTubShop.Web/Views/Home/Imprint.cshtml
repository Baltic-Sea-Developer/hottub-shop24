@{
    var lang = (ViewData["Lang"] as string) ?? "de";
    var isEn = lang == "en";
    ViewData["Title"] = isEn ? "Imprint" : "Impressum";
}

<section class="product-card p-4 legal-content">
    <h1>@ViewData["Title"]</h1>
    <p>
        @(isEn ? "Legal provider identification" : "Gesetzliche Anbieterkennung")
    </p>

    <h2>HotTub-Shop24</h2>
    <p>
        Sascha Humkamp<br />
        Am Kornhof 11<br />
        23744 Schönwalde am Bungsberg<br />
        Deutschland
    </p>

    <h2>@(isEn ? "Contact" : "Kontakt")</h2>
    <p>
        @(isEn ? "Phone" : "Telefon"): +49 1520 9884111<br />
        E-Mail: info@hottub-shop24.de
    </p>

    <h2>USt-IdNr.</h2>
    <p>DE300528980</p>

    <h2>@(isEn ? "Consumer dispute resolution" : "Verbraucherstreitbeilegung")</h2>
    <p>
        @(isEn
            ? "Information under section 36 VSBG: We are neither willing nor obliged to participate in dispute resolution proceedings before a consumer arbitration board."
            : "Hinweis nach § 36 VSBG: Wir sind weder bereit noch verpflichtet, an Streitbeilegungsverfahren vor einer Verbraucherschlichtungsstelle teilzunehmen.")
    </p>

    <p><strong>@(isEn ? "Last updated" : "Stand"):</strong> @(isEn ? "February 15, 2026" : "15. Februar 2026")</p>
</section>
